<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>
            <item>
                <shape>
                    <corners
                        android:radius="10dp"/>

                    <stroke
                        android:width="1dp"
                        android:color="#3BC672"/>

                    <gradient
                        android:startColor="#0099ff"
                        android:centerColor="#1a75ff"
                        android:endColor="#0099ff"
                        android:angle="45"/>

                    <padding
                        android:right="12dp"
                        android:left="12dp"/>
                </shape>
            </item>

            <item
                android:drawable="@drawable/baseline_arrow_drop_down"
                android:gravity="end"/>

        </layer-list>
    </item>

</selector>