<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_container_1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ChangePasswordFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Old Password"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="35dp"/>

    <EditText
        android:id="@+id/edt_change_password_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Old password..."
        android:textSize="18sp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/custom_edittext_login_signup"
        android:drawableLeft="@drawable/ic_pas_ls"
        android:drawablePadding="10dp"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/tv_change_Pas_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#E30C0C"
        android:padding="5dp"
        android:layout_marginHorizontal="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="35dp"/>

    <EditText
        android:id="@+id/edt_change_password_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="New password..."
        android:textSize="18sp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/custom_edittext_login_signup"
        android:drawableLeft="@drawable/ic_pas_ls"
        android:drawablePadding="10dp"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/tv_change_Pas_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#E30C0C"
        android:padding="5dp"
        android:layout_marginHorizontal="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Re-enter New Password"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="35dp"/>

    <EditText
        android:id="@+id/edt_change_password_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Re-enter password..."
        android:textSize="18sp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/custom_edittext_login_signup"
        android:drawableLeft="@drawable/ic_pas_ls"
        android:drawablePadding="10dp"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/tv_change_Pas_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#E30C0C"
        android:padding="5dp"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:id="@+id/btn_change_Pas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button_login_signup"
        app:backgroundTint="@null"/>

</LinearLayout>