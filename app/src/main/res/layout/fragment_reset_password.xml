<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragment.ResetPasswordFragment">

    <EditText
        android:id="@+id/edtResetFragmentEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:inputType="text"
        android:editable="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#151155"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/edtResetFragmentPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:hint="Nhập mật khẩu mới"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/tvCanhBaoResetPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#F60101"
        android:layout_marginHorizontal="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#151155"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/edtResetFragmentRePass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập lại mật khẩu"
        android:layout_marginHorizontal="30dp"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/tvCanhBaoResetRePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#F60101"
        android:layout_marginHorizontal="32dp" />

    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_login_signup"
        android:text="Reset Password"
        app:backgroundTint = "@null"
        android:layout_marginTop="30dp"/>


</LinearLayout>