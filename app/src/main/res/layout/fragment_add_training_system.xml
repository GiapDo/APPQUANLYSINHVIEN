<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        tools:context=".fragment.AddTrainingSystemFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Thêm hệ đào tạo mới"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:textColor="#AA7F09" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã chương trình"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edtSystemTId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập mã chương trình"
            android:inputType="text"/>

        <TextView
            android:id="@+id/cbSystemTId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#EC0B0B"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên chương trình"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edtSystemTName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập tên chương trình"
            android:inputType="text"/>

        <TextView
            android:id="@+id/cbSystemTName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#EC0B0B"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tín chỉ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edtSystemTTinChi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập mã chương trình"
            android:inputType="number"/>

        <TextView
            android:id="@+id/cbSystemTTinChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#EC0B0B"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edtSystemTMoTa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập mô tả chương trình"
            android:inputType="text"/>

        <TextView
            android:id="@+id/cbSystemTMoTa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#EC0B0B"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian học"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edtSystemTDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập thời gian học"
            android:inputType="number"/>

        <TextView
            android:id="@+id/cbSystemTDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#EC0B0B"/>

        <Button
            android:id="@+id/btnSystemTThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:layout_gravity="center"
            android:background="@drawable/custom_button_login_signup"
            app:backgroundTint = "@null" />


    </LinearLayout>
</ScrollView>