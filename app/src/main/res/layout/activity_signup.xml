<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_page"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:background="@drawable/custom_layout_login_signup">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="35dp"/>

        <EditText
            android:id="@+id/edtSignupUser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="username..."
            android:inputType="text"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/custom_edittext_login_signup"
            android:drawableLeft="@drawable/ic_user_ls"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvSignupCanhBaoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#E30C0C"
            android:padding="5dp"
            android:layout_marginHorizontal="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="35dp"/>

        <EditText
            android:id="@+id/edtSignupEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="email..."
            android:inputType="text"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/custom_edittext_login_signup"
            android:drawableLeft="@drawable/ic_email_ls"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvSignupCanhBaoEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#E30C0C"
            android:padding="5dp"
            android:layout_marginHorizontal="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="35dp"/>

        <EditText
            android:id="@+id/edtSignupPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="password..."
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/custom_edittext_login_signup"
            android:drawableLeft="@drawable/ic_pas_ls"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvSignupCanhBaoMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#E30C0C"
            android:padding="5dp"
            android:layout_marginHorizontal="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Re-enter Password"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="35dp"/>

        <EditText
            android:id="@+id/edtSignupRePassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="re-enter password..."
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/custom_edittext_login_signup"
            android:drawableLeft="@drawable/ic_pas_ls"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvSignupCanhBaoMatKhau01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#E30C0C"
            android:padding="5dp"
            android:layout_marginHorizontal="30dp"/>


        <Button
            android:id="@+id/btnSignup02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_login_signup"
            android:text="Signup"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            android:layout_gravity="center"
            app:backgroundTint = "@null"/>


    </LinearLayout>

</LinearLayout>