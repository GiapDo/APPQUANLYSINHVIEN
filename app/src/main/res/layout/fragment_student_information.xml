<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:src="@drawable/ic_avatar_student"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã sinh viên: "
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtFgInfoMaSV"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:inputType="number"
                android:background="#fff" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_edit"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvFgCbMaSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F10404"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sinh viên: "
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtFgInfoTenSV"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:inputType="text"
                android:background="#fff" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_edit"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvFgCbTenSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F10404"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày sinh: "
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtFgInfoNgaySinh"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:inputType="date"
                android:background="#fff" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_edit"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvFgCbNgaySinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F10404"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdbFgInfoNam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:layout_marginHorizontal="30dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/rdbFgInfoNu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    android:layout_marginStart="30dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/tvFgCbGioiTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F10404"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quê quán: "
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtFgInfoQueQuan"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:inputType="text"
                android:background="#fff" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_edit"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvFgCbQue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F10404"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtFgInfoEmail"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:inputType="textEmailAddress"
                android:background="#fff" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_edit"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvFgCbEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F10404"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại: "
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtFgInfoPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:inputType="phone"
                android:background="#fff" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_edit"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvFgCbSDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F10404"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lớp: "
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvFgInfoLop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:inputType="text"
                android:background="#fff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khoa: "
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvFgInfoKhoa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:inputType="text"
                android:background="#fff"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnFgInfoCapNhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_button_1"
            app:backgroundTint = "@null" />



    </LinearLayout>
</ScrollView>