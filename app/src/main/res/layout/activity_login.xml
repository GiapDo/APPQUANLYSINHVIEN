<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_page"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:orientation="vertical"
        android:background="@drawable/custom_layout_login_signup">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="35dp"/>

        <EditText
            android:id="@+id/edtLoginAccount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="account..."
            android:inputType="text"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/custom_edittext_login_signup"
            android:drawableLeft="@drawable/ic_user_ls"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvLoginCanhBaoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#E30C0C"
            android:padding="5dp"
            android:layout_marginHorizontal="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="28dp"
            android:layout_marginHorizontal="35dp"/>

        <EditText
            android:id="@+id/edtLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="password..."
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/custom_edittext_login_signup"
            android:drawableLeft="@drawable/ic_pas_ls"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvLoginCanhBaoPas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#E30C0C"
            android:padding="5dp"
            android:layout_marginHorizontal="30dp"/>

        <TextView
            android:id="@+id/tvLoginForgotPasss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#03409E"
            android:layout_gravity="end"
            android:layout_marginEnd="30dp"/>


        <Button
            android:id="@+id/btnLogin02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_login_signup"
            android:text="Login"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            app:backgroundTint = "@null"/>


    </LinearLayout>

</LinearLayout>